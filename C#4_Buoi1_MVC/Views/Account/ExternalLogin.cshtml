@using C_4_Buoi1_MVC.ViewModel;
@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="ExternalLogin" asp-route-returnurl="@Model.ReturnUrl" method="post">
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" class="form-control" id="inputEmail" placeholder="Email" value="@Model.Email" disabled>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                </div>
            </form>
        </section>
    </div>
</div>
