@{
    ViewData["Title"] = "Product Page";
    int stt = 0;
}
@using C_4_Buoi1_MVC.Component
@using System.Text;
@model IEnumerable<Product>

     <h2><i style="margin: 0 10px;" class="fa-solid fa-list"></i>  Danh sách sản phẩm</h2>
    <div class="row">
    <div class="col-10"></div>       
        <a class="CustomButton col-2" asp-area="" asp-controller="Product" asp-action="Create" style="float: right;">
            <span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                    <path fill="none" d="M0 0h24v24H0z"></path>
                    <path fill="currentColor" d="M11 11V5h2v6h6v2h-6v6h-2v-6H5v-2z"></path>
                </svg> Thêm mới
            </span>
        </a>
    </div>
<div class="box-shadow-custom" style="padding: 30px;">
   
@if (Model != null)
{
    
<table class="table table-bordered" style="text-align: center; top: auto!important; bottom: auto!important;">
    <thead style="background-color: rgb(240 253 255);">
    <tr>
      <th scope="col">STT</th>
      <th scope="col">Ảnh đại diện</th>
      <th scope="col">Tên</th>
      <th scope="col">Giá bán</th>
      <th scope="col">Số lượng còn</th>
      <th scope="col">Trạng thái</th>
      <th scope="col">Mô tả</th>
      <th scope="col">Chức năng</th>
    </tr>
  </thead>
  <tbody>
      
      @foreach (var item in Model)
       {
         
         stt++;
         <tr style="vertical-align: middle;">            
            <td>@stt</td>
            <td>
                <img width="100px" src="data:image/png;base64, @(Convert.ToBase64String(item.Image))">
            </td>
            <td>@item.Name</td>           
            <td>@item.Price</td>
            <td>@item.AvailbleQuantity</td>
            <td>@(item.Status == 0 ? "Hoạt động" : "Đang cập nhật")</td>
            <td>@(item.Description == "" ? "Trống" : item.Description)</td>
            <td>
                <a type="submit" asp-area="" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-success">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>
                <a asp-area="" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" type="submit" class="btn btn-outline-warning">
                    <i class="fa-solid fa-trash-can"></i>
                </a>
            </td>
         </tr>
        
        }     
   
  </tbody>
</table>
      
}
else
{
    <svg class="pl" width="240" height="240" viewBox="0 0 240 240">
	<circle class="pl__ring pl__ring--a" cx="120" cy="120" r="105" fill="none" stroke="#000" stroke-width="20" stroke-dasharray="0 660" stroke-dashoffset="-330" stroke-linecap="round"></circle>
	<circle class="pl__ring pl__ring--b" cx="120" cy="120" r="35" fill="none" stroke="#000" stroke-width="20" stroke-dasharray="0 220" stroke-dashoffset="-110" stroke-linecap="round"></circle>
	<circle class="pl__ring pl__ring--c" cx="85" cy="120" r="70" fill="none" stroke="#000" stroke-width="20" stroke-dasharray="0 440" stroke-linecap="round"></circle>
	<circle class="pl__ring pl__ring--d" cx="155" cy="120" r="70" fill="none" stroke="#000" stroke-width="20" stroke-dasharray="0 440" stroke-linecap="round"></circle>
</svg>
}

</div>
